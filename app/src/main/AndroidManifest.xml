<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Network permissions for connectivity checks and API calls -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Reviews"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.FilterActivity"
            android:exported="false" />
        <activity
            android:name=".ui.RecommendationActivity"
            android:exported="false" />
        <activity
            android:name=".ui.PersonalizedActivity"
            android:exported="false" />
        <activity
            android:name=".ui.TrendingActivity"
            android:exported="false" />
        <activity
            android:name=".ui.ProductDetailActivity"
            android:exported="false" />
        <activity
            android:name=".ui.OnboardingActivity"
            android:exported="false" />
        <activity
            android:name=".ui.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />
        <activity
            android:name=".ui.ResultActivity"
            android:exported="false" />
        <activity
            android:name=".ui.AnalyzeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.ComparisonActivity"
            android:exported="false" />
        <activity
            android:name=".ui.SummaryActivity"
            android:exported="false" />
        <activity
            android:name=".ui.HistoryActivity"
            android:exported="false" />
        <activity
            android:name=".ui.ReviewDetailActivity"
            android:exported="false" />
        <activity
            android:name=".ui.ChartsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.RecommendationsActivity"
            android:exported="false" />
    </application>

</manifest>