<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_gradient_background"
    tools:context=".ui.ReviewDetailActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/detailToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:titleTextColor="@android:color/white"
            app:title="Review Detail" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detailSentiment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NEUTRAL"
                android:textColor="@color/neutral_sentiment"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detailConfidence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textColor="#CCFFFFFF"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/detailTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025-09-25 02:30"
                android:textColor="#99FFFFFF"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/message_card_background"
                app:cardElevation="8dp">

                <TextView
                    android:id="@+id/detailText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#E6FFFFFF"
                    android:textSize="16sp"
                    android:lineSpacingExtra="4dp"
                    android:padding="16dp"
                    tools:text="Full review text goes here..." />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
