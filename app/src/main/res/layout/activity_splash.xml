<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/splash_background"
    android:padding="24dp">

        <!-- Background Gradient -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_background">

            <!-- Main Content Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="40dp">

                <!-- AI Icon with Animation -->
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottieAnimationView"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:lottie_rawRes="@raw/ai_brain"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    android:layout_marginBottom="20dp"/>

                <!-- App Name -->
                <TextView
                    android:id="@+id/appNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ai_recommend"
                    android:textSize="42sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_marginBottom="8dp"/>

                <!-- Tagline -->
                <TextView
                    android:id="@+id/taglineText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Smart Product Recommendations"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:alpha="0.8"
                    android:textAlignment="center"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_marginBottom="40dp"/>

                <!-- Three Techniques Row -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="30dp">

                    <!-- Cosine Similarity -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_margin="12dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_cosine"
                            app:tint="@color/cosine_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cosine"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Similarity"
                            android:textSize="12sp"
                            android:textColor="@color/white"/>
                    </LinearLayout>

                    <!-- Decision Tree -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_margin="12dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_decision_tree"
                            app:tint="@color/decision_tree_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Decision"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tree"
                            android:textSize="12sp"
                            android:textColor="@color/white"/>
                    </LinearLayout>

                    <!-- GNN -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_margin="12dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_gnn"
                            app:tint="@color/gnn_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Graph"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Neural Net"
                            android:textSize="12sp"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Loading Text with Progress -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="40dp">

                    <TextView
                        android:id="@+id/loadingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Initializing AI Models..."
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/montserrat_medium"
                        android:layout_marginBottom="16dp"/>

                    <!-- Progress Bar -->
                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="200dp"
                        android:layout_height="6dp"
                        android:progressTint="@color/primary_color"
                        android:progressBackgroundTint="@color/white"
                        android:indeterminate="false"/>

                    <!-- Progress Percentage -->
                    <TextView
                        android:id="@+id/progressText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="8dp"/>

                    <!-- Loading Steps -->
                    <TextView
                        android:id="@+id/stepText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading dataset..."
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:alpha="0.7"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

            </LinearLayout>

            <!-- Footer -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Powered by AI/ML"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:alpha="0.5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="20dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
